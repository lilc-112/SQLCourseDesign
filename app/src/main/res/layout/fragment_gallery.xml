<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="课程名称 :"
        android:textSize="20sp"
        android:layout_below="@id/text_gallery"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/editText_className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_className"
        android:layout_margin="10dp"
        android:hint="请输入课程名称" />

    <TextView
        android:id="@+id/textView_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学分赋值 :"
        android:textSize="20sp"
        android:layout_below="@id/editText_className"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/editText_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_credit"
        android:layout_margin="10dp"
        android:hint="请输入这门课程的学分" />

    <Button
        android:id="@+id/button_addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_credit"
        android:layout_margin="20dp"
        android:text="添加课程"
        android:layout_centerInParent="true" />

</RelativeLayout>