<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/textView_className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程名"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授课教师"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:layout_below="@id/textView_className" />

    <TextView
        android:id="@+id/textView_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学分"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:layout_below="@id/textView_teacher" />

    <Button
        android:id="@+id/button_addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选课"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>